<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 使用zookper暴露发现服务地址 -->
	<!-- <dubbo:registry address="zookeeper://192.168.204.133:2181" check="true" /> -->
	 <dubbo:registry address="${dubbo.address}" check="true" />
	<dubbo:application name="${dubbo.application}"/>
	<!-- 用dubbo协议在20881端口暴露服务 -->
    <dubbo:protocol name="${dubbo.protocol}" port="${dubbo.port}"/>
    
    <!-- 需要暴露的服务接口 -->
    <bean id="authorityResourcesShareService" class="net.wangxj.authority.service.share.impl.AuthorityResourcesShareServiceImpl"/>
    <dubbo:service interface="net.wangxj.authority.service.share.AuthorityResourcesShareService" ref="authorityResourcesShareService"/>
    <bean id="authorityRoleShareService" class="net.wangxj.authority.service.share.impl.AuthorityRoleShareServiceImpl"/>
    <dubbo:service interface="net.wangxj.authority.service.share.AuthorityRoleShareService" ref="authorityRoleShareService"/>
    <bean id="authorityRoleResourcesRelationShareService" class="net.wangxj.authority.service.share.impl.AuthorityRoleResourcesRelationShareServiceImpl"/>
    <dubbo:service interface="net.wangxj.authority.service.share.AuthorityRoleResourcesRelationShareService" ref="authorityRoleResourcesRelationShareService"/>
    <bean id="authorityUserShareService" class="net.wangxj.authority.service.share.impl.AuthorityUserShareServiceImpl"/>
    <dubbo:service interface="net.wangxj.authority.service.share.AuthorityUserShareService" ref="authorityUserShareService"/>
    <bean id="authorityUserRoleRelationShareService" class="net.wangxj.authority.service.share.impl.AuthorityUserRoleRelationShareServiceImpl"/>
    <dubbo:service interface="net.wangxj.authority.service.share.AuthorityUserRoleRelationShareService" ref="authorityUserRoleRelationShareService"/>
    <bean id="platformShareService" class="net.wangxj.authority.service.share.impl.PlatformShareServiceImpl"/>
    <dubbo:service interface="net.wangxj.authority.service.share.PlatformShareService" ref="platformShareService"/>
   
</beans>