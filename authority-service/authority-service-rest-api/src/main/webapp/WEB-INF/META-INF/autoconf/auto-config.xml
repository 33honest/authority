<?xml version="1.0" encoding="UTF-8"?>
<config>
    <group>
    	<property name="database.url" description="数据库URL" defaultValue="jdbc:mysql://localhost:3306/authority" required="true"/> 
		<property name="database.username" description="连接数据库用户名" defaultValue="root" required="true"/>		    
		<property name="database.password" description="连接数据库密码" defaultValue="llhua123" required="true"/>				    
		<property name="database.maxActive" description="最大连接池数量" defaultValue="30" required="true">
			<validator name="number" />
		</property>			    
		<property name="database.validateQuery" description="验证SQL" defaultValue="select * from user" required="true"/>
        <property name="database.aop.point.expression" description="事物包路径" defaultValue="execution(* net.wangxj.authority.service..*(..))" required="true"/>                            
    	
    	<property name="dubbo.address" description="dubbo注册地址" defaultValue="zookeeper://127.0.0.1:2181" required="true"/>
    	<property name="dubbo.application" description="dubbo应用名" defaultValue="authority_service" required="true"/>
    	<property name="dubbo.protocol" description="dubbo使用协议" defaultValue="dubbo" required="true"/>
    	<property name="dubbo.port" description="dubbo占用端口" defaultValue="2881" required="true"/>
    
		<property name="authority.service.log.root " description="日志根路径" defaultValue="/home/huoshan/log" required="true"/>
		<property name="authority.service.log.name" description="日志名" defaultValue=" authority_service.log" required="true"/>
		<property name="authority.service.log.level" description="日志级别" defaultValue="DEBUG" required="true"/>
		<property name="authority.service.exception.log" description="异常日志名" defaultValue="authority_service_exception.log"/>
		<property name="authority.service.sql.log.name" description="sql日志名" defaultValue="authority_service_sql.log"/>
		<property name="authority.service.active.mq.log.name" description="sql日志名" defaultValue="authority_service_activemq.log"/>
    	
    	<property name="component.scan.package" description="自动注入包扫描路径" defaultValue="net.wangxj.authority"/>
    </group>
    <script>
        <generate template="service-config.properties.vm" destfile="/config/service-config.properties"
        	charset="UTF-8"/> 
    </script>
</config>