<?xml version="1.0" encoding="UTF-8"?>
<config>
    <group>
    	<property name="dubbo.address" description="dubbo注册地址" defaultValue="zookeeper://127.0.0.1:2181" required="true"/>
    	<property name="dubbo.application" description="dubbo应用名" defaultValue="authority_web" required="true"/>
    
		<property name="authority.web.logging.root " description="日志根路径" defaultValue="/home/huoshan/log" required="true"/>
		<property name="authority.web.logging.name" description="日志名" defaultValue="authority_web.log" required="true"/>
		<property name="authority.logging.level" description="日志级别" defaultValue="DEBUG" required="true"/>
		
		<property name="component.scan.package" description="包扫描路径" defaultValue="net.wangxj.authority"/>
		
		<property name="authority.web.freemarker.dir" description="freemarker模板路径" defaultValue=""/>
		<property name="authority.web.upload.maxsize" description="文件上传最大限制" defaultValue="800000000"/>
    	
    	<property name="authority.web.upload.errorpage" description="文件上传错误页面" defaultValue="error_page"/>
    	<property name="authority.web.view.template.suffix" description="模板后缀" defaultValue=".ftl"/>
    </group>
    <script>
        <generate template="web-config.properties.vm" destfile="/config/service-config.properties"
        	charset="UTF-8"/> 
    </script>
</config>